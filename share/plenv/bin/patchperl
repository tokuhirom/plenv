#!/home/tokuhirom/.plenv/versions/5.8.9/bin/perl

eval 'exec /home/tokuhirom/.plenv/versions/5.8.9/bin/perl  -S $0 ${1+"$@"}'
    if 0; # not running under some shell

package
  patchperl;
# ABSTRACT: patch a perl source tree

use strict;
use warnings;
use Devel::PatchPerl;

Devel::PatchPerl->patch_source($ARGV[1], $ARGV[0]);

__END__

=pod

=head1 NAME

patchperl - patch a perl source tree

